---
import NavHeader from "@/components/NavHeader.astro"
import "@/styles/base_colors.css"
import "@/styles/reset.css"
import "@fontsource/oleo-script"
import "@fontsource/roboto"

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="This is the Daniel Rodriguez Criado's personal website and protfolio"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="img/favicon.svg?v=2" />
		<meta name="color-schmeme" content="light dark" />
		<meta name="generator" content={Astro.generator} />
		<title>Daniel Rodriguez | {title}</title>
	</head>
	<body>
		<NavHeader pageActive={title} />
		<slot />
	</body>
</html>

<style is:global>
	:root {
		/* Light mode */
		&[data-theme="‚òÄÔ∏è"] {
			color-scheme: light;
			--clr-background: var(--clr-light);

			--clr-text: var(--clr-neutral-800);
			--clr-text-invert: var(--clr-light);

			--clr-primary: var(--clr-yellow-500);
			--clr-secondary: var(--clr-neutral-500);
			--clr-accent: var(--clr-purple-300);

			--img-bg-home: "img/home/light_bg.jpg";
		}

		/* Dark mode */
		&[data-theme="üåë"] {
			color-scheme: dark;
			--clr-background: var(--clr-neutral-800);

			--clr-text: var(--clr-light);
			--clr-text-invert: var(--clr-neutral-800);

			--clr-primary: var(--clr-yellow-300);
			--clr-secondary: var(--clr-neutral-500);
			--clr-accent: var(--clr-purple-500);

			--img-bg-home: "img/home/dark_bg.jpg";
		}

		/* Font families */
		--ff-base: "roboto", system-ui, sans-serif;
		--ff-accent: "oleo-script", cursive, serif;

		/* font weights */
		--fw-regular: 500;
		--fw-bold: 600;
		--fw-black: 700;

		/* font sizes */
		--fs-300: 1rem;
		--fs-400: 1.125rem;
		--fs-500: 1.375rem;
		--fs-600: 1.75rem;
		--fs-700: 2.25rem;

		/* Global sizes  */
		--min-main-width: 60ch;
	}

	html {
		color-scheme: dark light;
		color: oklch(var(--clr-text));
		font-family: oklch(var(--ff-base));
		background-color: oklch(var(--clr-background));

		@media screen and (prefers-reduced-motion: no-preference) {
			scroll-behavior: smooth;
		}
	}

	/* Utility classes: */
	.visually-hidden:not(:focus):not(:active) {
		clip: rect(0 0 0 0);
		clip-path: inset(50%);
		height: 1px;
		overflow: hidden;
		position: absolute;
		white-space: nowrap;
		width: 1px;
	}

	.wrapper {
		/* width: min(100% - 2rem, var(--max-width, 70ch)); */
		max-width: var(--min-main-width, 70ch);
		margin-inline: auto;
	}
</style>
