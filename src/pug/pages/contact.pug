extends ../templates/template

block variables
    - var subtitle = 'Contact'
    - var rootPath = '../../'
    - var pageName = 'contact'

block styles
    link(rel="stylesheet" href=`${rootPath}css/contact.css`)

block header

block section
    .app
        form(action="https://formspree.io/f/mrgojyva" method="POST").form
            h1.app-info Contact me
            .user_field
                .row._1(style="--index: 0")
                    .textfield
                        input(type="text" name="Name" required).text-input
                        span.fieldinfo Name
                    .textfield
                        input(type="email" name="Email" required).text-input
                        span.fieldinfo Email
                .row._2(style="--index: 1")
                    .textfield
                        input(type="number" name="Number").text-input
                        span.fieldinfo Phone
                    .textfield
                        input(type="text" name="Contact Hours").text-input
                        span.fieldinfo Contact Hours
                .row._3(style="--index: 2")
                    .textfield
                        textarea(placeholder="Your message" name="message" required).text-input
                .row._4(style="--index: 3")
                    button(type="submit" value="Submit").submit.btn Submit
