extends ../templates/template

block variables
    - var subtitle = 'Research'
    - var rootPath = '../../'
    - var pageName = 'research'

block styles
    link(rel="stylesheet" href=`${rootPath}css/research.css`)

block header
    header.main-header
        .main-header__copy
            h1 Research
            p Some of the most relevant projects I am working on. Each project on this page links to its description in the webpage #[a(href="http://gnns4hri.org/index.html") Graph Neural Netowrks for Human-Robot Interaction].

block section
    ul.projects
        li.project-item
            a(href="../projects/traffic.html")
                img.project-item__img(src=`${rootPath}img/research/traffic3D.png` alt="From SUMO to real")
                .project-item__text
                    h2 Generation of traffic images
                    p.description A tool to synthesise traffic datasets using graph neural networks
        li.project-item
            a(href="../projects/datasets.html")
                img.project-item__img(src=`${rootPath}img/research/datasets.jpg` alt="Image of a dataset scenario")
                .project-item__text
                    h2 Datasets
                    p.description A collection of structured datasets related to social navigation.
        li.project-item
            a(href="../projects/sonata.html")
                img.project-item__img(src=`${rootPath}img/research/sonata.png` alt="sonata scenario")
                .project-item__text
                    h2 Sonata
                    p.description A tool to generate HRI datasets
        li.project-item
            a(href="../projects/sngnn1d.html")
                img.project-item__img(src=`${rootPath}img/research/sngnn1d.png` alt="1D map")
                .project-item__text
                    h2 Graph Neural Network for Social Navigation 1D
                    p.description A GNN model which estimates the navigation social compliance value for a particular scene.
        li.project-item
            a(href="../projects/sngnn2d.html")
                img.project-item__img(src=`${rootPath}img/research/sngnn2d.png` alt="2D cost map")
                .project-item__text
                    h2 Graph Neural Netowrk for Social Navigation 2D
                    p.description A GNN model to generate a 2D cost map for social navigation.
